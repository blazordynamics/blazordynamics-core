@page "/"
@using BlazorDynamics.Core.Models
@using BlazorDynamics.Forms.Commons
@using BlazorDynamics.Forms.Components.Factories
@using BlazorDynamics.Common.Enums;
@using System.Text.Json;
@using BlazorDynamics.MudBlazorComponents.Extensions;
@using System.Dynamic

@inject ComponentsList DynamicComponentList

<PageTitle></PageTitle>

<BDForm FormModel=@model Components=@DynamicComponentList Value="@data" ValueChanged="@update"></BDForm>

<MudCard>
    <MudCardHeader>
        Data
    </MudCardHeader>
    <MudCardContent>
        @result
    </MudCardContent>
</MudCard>

@code
{
    private string result = string.Empty;

    private void update()
    {
        result = JsonSerializer.Serialize(data);
        StateHasChanged();
    }

    public ExpandoObject data = new ExpandoObject();

    public DynamicFormModel model = FormFactory.GroupLayout(group =>
        group
           .WithParameter("Collapsed", false)
           .WithParameter("HeaderModel", HeaderForm())
           .WithElements(DetailForm())
        ).WithTypeDefinionName("Collapsable");


    private static DynamicFormModel HeaderForm()
    {
        return FormFactory.StringDisplay("Name", "$.name");
    }

    private static DynamicFormModel DetailForm()
    {
        return FormFactory.VerticalLayout(
            FormFactory.StringComponent("Name", "$.name"),
            FormFactory.StringComponent("City", "$.city")
            );
    }
}

