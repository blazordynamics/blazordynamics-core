@namespace BlazorDynamics.RadzenComponents.Layout
@inherits  BlazorDynamics.Forms.Components.Layout.HorizontalLayoutBase
@using BlazorDynamics.Common.Enums;

<BDFormComponentWrapper Class="horizontalcomponent" FormComponent="@this">
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start">
        @foreach (var element in this.FormModel.SubElements)
        {
            <DynamicComponent Type=@GetTypeNameFor(element) Parameters=@GetValidParametersFor(element) />
        }
    </RadzenStack>
</BDFormComponentWrapper>