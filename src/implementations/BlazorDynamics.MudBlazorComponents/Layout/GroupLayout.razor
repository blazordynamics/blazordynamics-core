@namespace BlazorDynamics.MudBlazorComponents.Layout
@inherits BlazorDynamics.Forms.Components.Layout.GroupLayoutBase

<BDFormComponentWrapper Class="groupcomponent" FormComponent="@this">
    <MudCard>
        @if (!string.IsNullOrEmpty(Label))
        {
            <MudCardHeader>
                @Label
            </MudCardHeader>
        }
        <MudCardContent>
            <MudStack>
                @foreach (var element in this.FormModel.SubElements)
                {
                    <DynamicComponent Type=@GetTypeNameFor(element) Parameters=@GetValidParametersFor(element) />
                }
            </MudStack>
        </MudCardContent>
    </MudCard>
</BDFormComponentWrapper>